{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ES2022",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "strict": true,
        "outDir": "./dist",
        "rootDir": ".",
        "declaration": true,
        "skipLibCheck": true,
        "allowJs": true
    },
    "include": [
        "packages/**/*.ts",
        "packages/**/*.js"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}
